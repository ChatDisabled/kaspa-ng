{
  "manifest_version": 3,
  "version": "1.0",
  "version_name": "1.0 beta",
  "name": "Kaspa EGUI PWA",
  "short_name": "kaspa-egui-pwa",
  "permissions": ["scripting", "alarms", "storage", "activeTab", "offscreen"],
  
  "background": {
      "service_worker": "background.js",
      "type": "module"
      
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "host_permissions": [
      "https://*/*", 
      "http://*/*" 
  ],
  "action" : {
      "default_icon": {
          "16": "icons/icon-16.png",
          "32": "icons/icon-32.png",
          "48": "icons/icon-48.png",
          "128": "icons/icon-128.png"
      },
      "default_popup": "index.html"
  },
  "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
  }
}
